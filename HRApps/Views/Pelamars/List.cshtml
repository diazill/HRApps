@{
}

@model List<HRApps.Models.DataPelamar.Pelamar>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Pelamar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nik</th>
                        <th>Firs Name</th>
                        <th>Last Name</th>
                        <th>Jenis Kelamin</th>
                        <th>Status Pernikahan</th>
                        <th>Tanggal Lahir</th>
                        <th>Status Pelamar</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var Pelamar in Model){
                        <tr>
                            <td>@Pelamar.Id</td>
                            <td>@Pelamar.Nik</td>
                            <td>@Pelamar.FirstName</td>
                            <td>@Pelamar.LastName</td>
                            <td>@Pelamar.JenisKelamin</td>
                            <td>@Pelamar.Status</td>
                            <td>@Pelamar.TglLahir</td>
                            <td>@Pelamar.StatusPelamar</td>
                            <td>
                                <div class="d-flex">
                                    <a type="button" class="btn btn-success me-2" href="/Home/Edit?id=@Pelamar.Id">Edit</a>
                                    <a type="button" class="btn btn-danger" href="/Home/Edit?id=@Pelamar.Id">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>